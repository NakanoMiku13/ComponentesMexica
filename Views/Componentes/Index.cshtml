@model IEnumerable<ComponentesMexica.Data.Models.Componente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a id="btnNuevo" asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employeeid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.ComisionPay)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Ganancia)
