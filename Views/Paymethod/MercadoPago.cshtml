@model MercadoPagoViewModel
@{
    ViewData["Title"] = "MercadoPago";
}
<h1>MercadoPago</h1>
<div class="row" id="data">
    <div class="col-12">
        <h4 class="mb-3">Datos Personales</h4>
        <form asp-action="Fase2" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Nombre</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Tu Nombre" readonly value="@Model.Order.Nombre">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Apellidos</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Tus apellidos" readonly value="@Model.Order.Apellidos">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 mb-3">
                    <label>N&uacute;mero</label>
                    <input readonly class="form-control" placeholder="Tu numero de celular" value="@Model.Order.Numero" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Metodo de pago</label>
                    <input readonly class="form-control" value="@Model.Order.MetodoPago" />
                </div>
            </div>
            <div class="mb-3">
                <label for="address">Direcci&oacute;n</label>
                <input type="text" class="form-control" id="address" placeholder="1234 Main St" readonly value="@Model.Order.Direccion">
                <div class="invalid-feedback">
                    Por favor coloca tu direcci&oacute;n para poder realizar la entrega.
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 mb-3">
                    <label for="country">Estado</label>
                    <input type="text" value="@Model.Order.Estado" readonly class="form-control" />
                    <div class="invalid-feedback">
                        Please select a valid country.
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="state">Codigo Postal</label>
                    <input type="text" value="@Model.Order.CP" readonly class="form-control" />
                    <div class="invalid-feedback">
                        Seleccione uno.
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="zip">Colonia</label>
                    <input type="text" readonly class="form-control" value="@Model.Order.Colonia" />
                    <div class="invalid-feedback">
                        Seleccione uno.
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://www.mercadopago.com.mx/integrations/v1/web-payment-checkout.js"
        data-public-key="APP_USR-ef3ae39a-a787-48dd-ab7e-e0ce2d90f45d"
        data-transaction-amount="@ViewBag.Total"
        data-button-label="Comprar">
</script>
