        </thead>
        <tbody class="text-center">
            <tr>
                <td>Agregar a carrito</td>
                <td>Recomendar producto</td>
                <td>Reportar producto</td>
                <td>Reportar un problema</td>
                <td>Informaci&oacute;n adicional</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card" style="width: 18rem;">
                <img src="~/UploadSHImages/@item.Imagen" class="card-img-top" alt="@item.Modelo">
                <div class="card-body">
                    <h5 class="card-title">@item.Modelo</h5>
                    <p class="card-text">@item.Marca | @item.Modelo.</p>
                    <p class="card-text text-success">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cash-stack" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M14 3H1a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1h-1z" />
                            <path fill-rule="evenodd" d="M15 5H1v8h14V5zM1 4a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1H1z" />
