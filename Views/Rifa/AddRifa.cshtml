@model Rifas
@{
    ViewData["Title"] = "AddRifa";
}

<div class="row">
    <div>
        <form asp-action="AddRifa" method="post">
            <div class="form-group">
                <label>Producto</label>
                <select asp-for="Componenteid" asp-items="ViewBag.Componenteid"></select>
            </div>
            <div class="form-group">
                <label>Cantidad de boletos</label>
                <input asp-for="Tickets"/>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-outline-success" value="Crear Rifa"/>
            </div>
        </form>
    </div>
</div>

