@model TicketViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Registro</h1>
<h3>Al ser un usuario de Componentes Mexica, no necesitamos que nos des datos directos, directamente te enviaremos un mail con los datos, as&iacute; mismo en tu correo te informaremos el status de la rifa actual.</h3>
<div class="row">
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label>Selecciona la cantidad de tickets que quieras o que haya disponibles</label>
            <h4>Disponibles:</h4>
            <h5 id="texto"></h5>
            <input type="range" asp-for="Cantidad" max="@ViewBag.total" min="1" required id="rango" onchange="SetValue(this.value);" class="form-control-range"/>
            <h4>Costo total:</h4>
            <h5 class="text-success" id="costo"></h5>
        </div>
        <div class="form-group">
            <input class="btn btn-outline-success" type="submit" value="Comprar"/>
        </div>
    </form>
</div>
<script>
    function SetValue(val) {
        document.getElementById('texto').innerHTML = val;
        document.getElementById('costo').innerHTML = val * @ViewBag.costo;
    }
</script>

