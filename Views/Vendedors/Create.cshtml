@model ComponentesMexica.Data.ViewModels.VendedorViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Bienvenido</h1>
<h3 class="alert alert-secondary">En esta secci&oacute;n podr&aacute;s registrarte como un vendedor y podr&aacute;s vender tus componentes de segunda mano o nuevos, te recomendamos leer el aviso para vendedores donde encontrar&aacute;s a detalle que implica y c&oacute;mo funciona ser vendedor con nosotros.</h3>
<form asp-action="Create">
    <div class="form-group row">
        <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Nombre" class="form-control" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Apellidos" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Apellidos" class="form-control" required />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="INE" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="INE" class="form-control" required />
            <span asp-validation-for="INE" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImagenINE" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImagenINE" class="form-control-file" required />
            <span asp-validation-for="ImagenINE" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Curp" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Curp" class="form-control" required />
            <span asp-validation-for="Curp" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">N&uacute;mero telef&oacute;nico</label>
        <div class="col-sm-10">
            <input asp-for="Numero" class="form-control" required />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <input asp-for="TerminosYCondiciones" required class="form-check-input" />
        <label class="form-check-label">Acepto los terminos y condiciones</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
